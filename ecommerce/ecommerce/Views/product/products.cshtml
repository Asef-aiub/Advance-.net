@model List<ecommerce.db.product>

@{
    ViewBag.Title = "products";
}

<h2>products</h2>
<form action="" method="post">

    <ul>
        @foreach (var item in Model)
        {
        <li>

            <input type="checkbox" name="products[]" value="@item.id"> @item.name price: @item.price 

        </li>
        }

    </ul>
    <table class="table table-bordered">
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.id</td>
            <td>@item.name</td>
            <td>@item.price</td>
            <td>@item.qty</td>
            <td><a href="/product/edit/@item.id" class="btn btn-info">Edit</a></td>
            <td><a href="@Url.Action("Delete", new { @item.id })" class="btn btn-info">Delete</a></td>
        </tr>
        }

    </table>
    <input type="submit" value="Add to Cart" />

</form>


